# ============================================================
# PostgreSQL (principal)
# ============================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lotodb
DB_USER=postgres
DB_PASSWORD=postgres

# Spring Boot datasource (recommandé)
SPRING_DATASOURCE_URL=jdbc:postgresql://${DB_HOST}:${DB_PORT}/${DB_NAME}
SPRING_DATASOURCE_USERNAME=${DB_USER}
SPRING_DATASOURCE_PASSWORD=${DB_PASSWORD}

# JPA / Hibernate
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_PROFILES_ACTIVE=dev

# ============================================================
# MongoDB (historique)
# ============================================================
MONGO_URI=mongodb://localhost:27017
MONGO_DB=lotodb
MONGO_COL=historique

# ============================================================
# API / Server
# ============================================================
SERVER_PORT=8082
TZ=Europe/Paris
# JAVA_OPTS=-Xmx512m -Xms256m
JAVA_OPTS="-Xmx512m -Xms256m"

# ============================================================
# JWT (SECURITE)
# ⚠️ Mets une vraie clé longue et aléatoire en prod (et ne commit pas)
# ============================================================
# JWT_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_SECRET_64CHARS_MIN
JWT_SECRET=CHANGE_ME__a_very_long_secret_key_for_hs512_at_least_64_chars_1234567890abcdef
JWT_EXPIRATION=86400000

# ============================================================
# Migration (si tu en as encore besoin)
# ============================================================
# SQLITE_DB_PATH=./loto.db
# MIGRATION_SCRIPT_PATH=./src/main/resources/db/migration

# ============================================================
# Ollama (AI)
# ============================================================
OLLAMA_BASE=http://127.0.0.1:11434
OLLAMA_MODEL=llama3.1:8b

